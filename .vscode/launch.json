{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex1",
      "program": "${workspaceFolder}/src/ex1-hello-world/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex2",
      "program": "${workspaceFolder}/src/ex2-booleans/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex2 - Solution",
      "program": "${workspaceFolder}/src/ex2-booleans/solution.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex3",
      "program": "${workspaceFolder}/src/ex3-express/index.js",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex4",
      "program": "${workspaceFolder}/src/ex4-double-for-loop/index.js",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex4 - With 'skipFiles'",
      "program": "${workspaceFolder}/src/ex4-double-for-loop/index.js",
      "skipFiles": [
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex4 - Solution",
      "program": "${workspaceFolder}/src/ex4-double-for-loop/solution.js",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex5",
      "program": "${workspaceFolder}/src/ex5-memoization/index.js",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex5 (Bonus)",
      "program": "${workspaceFolder}/src/ex5-memoization/index.js",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex5 - Test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout", "999999",
        "--colors",
        "${workspaceFolder}/src/ex5-memoization/"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ex5 - Test (Bonus)",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout", "999999",
        "--colors",
        "${workspaceFolder}/src/ex5-memoization/"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "IS_BONUS": "TRUE"
      }
    },
  ]
}